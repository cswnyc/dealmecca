NEXT_PUBLIC_MAINTENANCE_MODE=false

# Performance & Optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_CDN_URL=https://cdn.dealmecca.com
